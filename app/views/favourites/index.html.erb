<div class="tabs">
  <ul class="list-inline tabs-underlined">
    <li>
      <%= link_to "FAVOURITES", user_favourites_path(current_user), class: "tab-underlined active" %>
    </li>
    <li>
      <%= link_to "REVIEWS", user_reviews_path(current_user), class: "tab-underlined" %>
    </li>
  </ul>
</div>

<div class="dashboard">

  <div class="profile-banner">
    <h1 class="heading">HELLO <%= current_user.first_name.upcase %>!</h1>

  </div>

  <div class="profile-photo">
    <% if current_user.photo.attached? %>
      <%= cl_image_tag(current_user.photo.key, crop: :thumb, gravity: :face, class: "avatar profile-pic-critic") %>
    <% end %>
  </div>

  <div class="achievements">
    <% if @user.critic? %>
      <div class="ach-style ach-critic"><i class="fas fa-pen-nib" id="flag-colour-size" style="margin-bottom: 4px;"></i>CRITIC</div>
    <% elsif @user.reviews.count < 2%>
      <div class="ach-style ach-one"><i class="fas fa-hand-sparkles" id="hand-spark"></i>L1: PORTER</div>
    <% elsif @user.reviews.count < 5 %>
      <div class="ach-style ach-two"><i class="fas fa-graduation-cap" id="grad-cap"></i>L2: COMMIS CHEF</div>
    <% elsif @user.reviews.count < 8 %>
      <div class="ach-style ach-three"><i class="fas fa-utensils" id="knife"></i>L3: SOUS CHEF</div>
    <% elsif @user.reviews.count < 10 %>
      <div class="ach-style ach-four"><i class="fas fa-gem" id="head-chef"></i>L4: HEAD CHEF</div>
    <% end %>
  </div>

  <div class="user-stats box-shadow-card individual-review">
    <div class="us-one">
      <div class="rev-count">
        <h2> <%= @user.reviews.count %></h2>
      </div>
      <div>
        <p>REVIEWS</p>
      </div>
    </div>
    <div class="us-two"><h2><%= @user.find_emoji %></h2></div>
    <% top_rated = @user.reviews.select { |review| review.rating == 5} %>
    <div class="us-three">
      <div class="top-dish-count">
        <h2><%= top_rated.count %></h2>
      </div>
      <div class="dish-disco">
        <p>5üç¥ DISHES DISCOVERED</p>
      </div>
    </div>
  </div>


    <!-- fill in from show page -->
  <div class="favourite-dish-grid">
    <h2 class="sub-heading">YOUR FAVOURITES</h2>
    <% @favourite_dishes.each do |favourite| %>
      <div class="dish-card box-shadow-card individual-review" id="<%= favourite.dish.name.parameterize %>">
        <div class="dish-name text-center">
          <h2><%= favourite.dish.name %></h2>
        </div>
        <div class="dish-description">
          <p><%= favourite.dish.restaurant.name %></p>
        </div>
        <div class="dish-description">
          <p><%= favourite.dish.description %></p>
        </div>
        <div class="favourite-button-links">
          <%= link_to "REVIEW", new_dish_review_path(favourite.dish)%> | <%= link_to favourite_path(favourite), method: :delete, remote:true, class: "link" do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

















