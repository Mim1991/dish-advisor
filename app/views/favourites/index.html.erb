<div class="tabs">
  <ul class="list-inline tabs-underlined">
    <li>
      <%= link_to "FAVOURITES", user_favourites_path(current_user), class: "tab-underlined active" %>
    </li>
    <li>
      <%= link_to "REVIEWS", user_reviews_path(current_user), class: "tab-underlined" %>
    </li>
  </ul>
</div>
<div class="dashboard">
  <div class="profile-banner">
    <h1 class="heading">HELLO <%= current_user.first_name.upcase %>!</h1>
    <h2 class="sub-heading">YOUR FAVOURITES</h2>
  </div>
  <div class="user-favourites">
    <div class="row" id="dashboard-row">
      <% @favourite_dishes.each do |favourite| %>
      <div class="col-sm-12">
        <div class="dashboard-card">
          <div class="dashboard-infos" id="fav-infos">
          <div class="dish-title">
            <%= link_to favourite.dish.name.upcase, restaurant_path(favourite.dish.restaurant.id, anchor: "#{favourite.dish.name.parameterize}") %>
            <% if favourite.dish.dish_type == "Starter" %>
              <img class="dish-icon" src="https://www.flaticon.com/svg/static/icons/svg/1721/1721500.svg" alt="starter">
            <% elsif favourite.dish.dish_type == "Main" %>
              <img class="dish-icon" src="https://www.flaticon.com/svg/static/icons/svg/3014/3014425.svg" alt="main">
            <% elsif favourite.dish.dish_type == "Dessert" %>
              <img class="dish-icon" src="https://www.flaticon.com/svg/static/icons/svg/3111/3111148.svg" alt="dessert">
            <% elsif favourite.dish.dish_type == "Drink" %>
              <img class="dish-icon" src="https://www.flaticon.com/svg/static/icons/svg/887/887320.svg" alt="drink">
            <% end %>
          </div>
          <div class="d-flex">
            <div class="dish-description">
              <!-- <h6><%= favourite.dish.restaurant.name %> | <%= favourite.dish.restaurant.address %></h6> -->
              <p><%= favourite.dish.description %></p>
            </div>
            <div class="delete-button">
              <%= link_to favourite_path(favourite), method: :delete, remote:true, class: "link" do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


