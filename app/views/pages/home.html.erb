<h1>Pages#home</h1>

<div class="search-bar">
  <%= form_tag restaurants_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form_control form-search form-search-colour", id: "form-search-home",
    placeholder: "Search for..."
    %>
    <%= submit_tag "Search", class: "btn-search-home" %>
  <% end %>
</div>
