<div class="review-container">
  <h4>ADD YOUR REVIEW</h4>
  <!-- simple form to create a review for a dish -->
  <%= simple_form_for [@dish, @review] do |f| %>
    <%= f.input :title, label: false, placeholder: "Title" %>
    <%= f.input :content, label: false, placeholder: "Write your review" %>
    <%= f.input :rating, collection: 0..5, label: false, placeholder: "Rating" %>
    <%= f.input :visit_date, as: :date, html5: true, label: false %>
    <%= f.submit class: 'btn btn-primary', id: 'form-button' %>
  <% end %>

   <%= link_to "Back to dish", dish_path(@dish) %>
</div>
