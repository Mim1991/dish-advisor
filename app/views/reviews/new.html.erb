<!-- simple form to create a review for a dish -->
<% simple_form_for[@dish, @review] do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :visit_date, as: :date, html5: true %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

 <%= link_to "Back to dish", dish_path(@dish) %>
